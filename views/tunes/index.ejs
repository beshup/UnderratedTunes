<%- include ('../partials/header') %>


<div class ="container">

	<header class = "jumbotron">
	<div class ="container">
		<h1>
			UnderratedTunes
		</h1>
		<p>Empowering songs and artists flying under the radar</p>
		<p>
			<a class ="btn btn-primary btn-lg" href ='/tunes/new'>Add New Song</a>
		</p>
	</div>
	</header>
	
	
	<div class = "row" style="display:flex; flex-wrap: wrap;">	
		<%tunes.forEach(function(tune){%>
			<div class ="col-md-3 col-sm-6">
				<div class ="thumbnail">
					<img src= "<%=tune.dbimageurl%>">
					<div class ="caption">
						<h4><%= tune.dbtrack %></h4>
						<h6><%= tune.dbartist %></h6>
						<p>
							<a class ="btn btn-primary" href ="/tunes/<%= tune._id %>">The Conversation</a>
						</p>
					</div>
				</div>
			</div>
		<%});%>
	</div>
	
	
	<%- include ('../partials/footer') %>
</div>